---
import Layout from '../components/base/BaseLayout.astro';
const { proyecto } = Astro.props;
const { title, description, authors, grade, semester, presentation_link, documents_link, instructions, cover } = proyecto.data;
---

<Layout>
  <section class="py-10">
    <h1 class="text-4xl font-bold">{title}</h1>
    <img src={cover} alt={title} class="w-full h-80 object-cover rounded my-6" />

    <div class="space-y-4">
      <p><strong>Semestre:</strong> {semester}</p>
      <p><strong>Autores:</strong> {authors.join(", ")}</p>
      <p><strong>Nota obtenida:</strong> {grade}</p>
      <p><strong>Descripción:</strong> {description}</p>

      <div class="flex gap-4 mt-4">
        <a href={presentation_link} class="btn btn-primary" target="_blank">Ver Presentación</a>
        <a href={documents_link} class="btn btn-secondary" target="_blank">Documentos del Proyecto</a>
      </div>

      <div class="mt-10">
        <h2 class="text-2xl font-semibold mb-2">Instrucciones para Replicar el Proyecto</h2>
        <pre class="bg-gray-100 p-4 rounded">{instructions}</pre>
      </div>
    </div>
  </section>
</Layout>

