---
const { proyecto } = Astro.props;
---

<article class="border p-4 rounded shadow-md hover:shadow-lg transition">
  <a href={`/proyectos/${proyecto.slug}`}>
    <img src={proyecto.data.cover} alt={proyecto.data.title} class="w-full h-48 object-cover mb-4 rounded" />
    <h3 class="text-lg font-bold">{proyecto.data.title}</h3>
    <p class="text-sm text-gray-500">Semestre: {proyecto.data.semester}</p>
  </a>
</article>
