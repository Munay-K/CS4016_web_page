---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

const {
  title = SITE_TITLE,
  description = SITE_DESCRIPTION,
  heroImage,
  structuredData,
} = Astro.props;

type Props = {
  title?: string;
  description?: string;
  heroImage?: string;
  structuredData?: string;
};
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      image={heroImage}
      structuredData={structuredData}
    />
  </head>
  <body>
    <Header />
    <main class="mt-10">
      <slot />
    </main>
    <Footer class="flex flex-col items-center justify-center space-y-4 py-8"/>
  </body>
</html>
